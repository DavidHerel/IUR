<Window x:Class="Cv2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cv2"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350 ">
    <Grid>
        <Label Content="Město" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Teplota" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Vlhkost" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="70,14,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Praha" IsSelected="True"/>
            <ComboBoxItem Content="Brno"/>
            <ComboBoxItem Content="Ostrava"/>
        </ComboBox>
        <TextBlock Name= "TemperatureTextBlock" HorizontalAlignment="Left" Margin="70,46,0,0" TextWrapping="Wrap" Text="Teplota" VerticalAlignment="Top"/>
        <TextBlock Name="HumidityTextBlock" HorizontalAlignment="Left" Margin="70,77,0,0" TextWrapping="Wrap" Text="Vlhkost" VerticalAlignment="Top"/>
    </Grid>
</Window>
