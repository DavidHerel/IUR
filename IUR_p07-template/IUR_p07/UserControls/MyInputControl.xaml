<UserControl x:Class="IUR_p07.MyInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IUR_p07"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200"
             x:Name="root">
    <DockPanel >
        <Button Name="myButton" DockPanel.Dock="Right" Click="myButton_Click" >Browse...</Button>
        <TextBox Name="myTextBox" Text="{Binding FileName, ElementName=root}"></TextBox>
    </DockPanel>
</UserControl>
